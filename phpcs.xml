<?xml version="1.0" ?>
<ruleset name="WordPress Theme Boilerplate" namespace="WordPress\Theme\Boilerplate">
  <config name="installed_paths" value="vendor/wp-coding-standards/wpcs" />

  <arg name="extensions" value="php" />

  <exclude-pattern>*/vendor/*</exclude-pattern>
  <exclude-pattern>*/node_modules/*</exclude-pattern>

  <rule ref="Generic.Arrays.DisallowShortArraySyntax.Found" />

  <rule ref="WordPress-Extra" />

  <rule ref="WordPress.WP.I18n">
    <properties>
      <property name="text_domain" type="array" value="tonik" />
    </properties>
  </rule>

  <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
    <properties>
      <property name="prefixes" type="array" value="tonik" />
    </properties>
  </rule>

  <rule ref="WordPress.Files.FileName">
    <properties>
      <property name="is_theme" value="true" />
    </properties>
  </rule>

  <rule ref="WordPress.WP.DeprecatedFunctions">
    <properties>
      <property name="minimum_supported_version" value="4.0" />
    </properties>
  </rule>
</ruleset>
